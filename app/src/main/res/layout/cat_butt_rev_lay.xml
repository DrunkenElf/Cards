<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/shape_tail"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">


        <com.github.rubensousa.raiflatbutton.RaiflatButton
            android:id="@+id/but_learn"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Учить"
            android:textAllCaps="false" />

        <com.github.rubensousa.raiflatbutton.RaiflatButton
            android:id="@+id/but_watch"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Список"
            android:textAllCaps="false" />
        <com.github.rubensousa.raiflatbutton.RaiflatImageButton
            android:id="@+id/but_rev"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_revers_black_24dp"
            android:textAllCaps="false"
            />
    </LinearLayout>

</LinearLayout>